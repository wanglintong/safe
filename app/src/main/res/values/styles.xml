<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">#0f0</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="nextBtn">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:onClick">nextPage</item>
        <item name="android:background">@drawable/selector_next_btn_bg</item>
        <item name="android:drawableRight">@mipmap/next</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">下一页</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="previousBtn">
        <item name="android:onClick">previousPage</item>
        <item name="android:background">@drawable/selector_next_btn_bg</item>
        <item name="android:drawableLeft">@mipmap/previous</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">上一页</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
